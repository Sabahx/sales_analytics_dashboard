# Streamlit Cloud Secrets Configuration
# Copy this file's contents to your Streamlit Cloud app's secrets section
# Go to: https://share.streamlit.io/ -> Your App -> Settings -> Secrets

# Database Configuration (Railway PostgreSQL)
DB_HOST = "mainline.proxy.rlwy.net"
DB_PORT = "55926"
DB_NAME = "railway"
DB_USER = "postgres"
DB_PASSWORD = "your_railway_password_here"

# Application Settings
ENVIRONMENT = "production"
DEBUG = "False"
LOG_LEVEL = "INFO"

# Optional: Email Configuration (if using SendGrid)
EMAIL_ENABLED = "True"
SENDGRID_API_KEY = "your_sendgrid_key_here"
EMAIL_FROM = "your_email@example.com"
EMAIL_FROM_NAME = "Sales Analytics"
